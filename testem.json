{
  "launch_in_dev" : ["Mocha","Chrome"],
  "framework": "mocha",
  "launchers": {
    "Mocha": {
      "command": "mocha test/browserified.js -R nyan -G"
    }
  },
  "serve_files": [ "test/browserified.js" ],
  "src_files": [
    "app/vendor/*.js",
    "app/scripts/*.js",
    "test/helpers/*.js",
    "test/unit/*.js"
  ],
   "before_tests": "grunt test",
    "on_exit": "rm test/browserified.js"
}

